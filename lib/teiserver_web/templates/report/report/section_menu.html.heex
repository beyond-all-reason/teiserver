<% bsname = view_colour() %>

<%= if allow?(@current_user, Teiserver.Account.ActiveReport.permissions()) do %>
  {central_component("section_menu_button",
    name: "active",
    label: "Active",
    active: @active,
    icon: Teiserver.Account.ActiveReport.icon(),
    bsname: bsname,
    url: Routes.ts_reports_report_path(@conn, :show, "active")
