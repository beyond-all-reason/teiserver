<% bsname = view_colour() %>

<script src={Routes.static_path(@conn, "/js/d3.js")}>
</script>
<script src={Routes.static_path(@conn, "/js/c3.min.js")}>
</script>

<link href="/css/c3.min.css" rel="stylesheet" />

<style>
  .chart-div {
    margin: 0 0 15px 0;
    padding-bottom: 10px;
    height: 20vh;
    border-bottom: 1px solid #555;
  }
</style>

<%= if @params["all_charts"] != "true" do %>
  <style>
    .all-chart {
      display: none;
    }
  </style>
<% end %>

<% col_class =
  case String.trim(@params["columns"] || "2") do
    "6" -> "col-md-2"
    "4" -> "col-md-3"
    "3" -> "col-md-4"
    "2" -> "col-md-6"
    _ -> "col-md-12"
  end

col_class = col_class <> " my-2"
all_col_class = col_class <> " all-chart" %>

<script>
  $(function() {
    c3.generate({
      bindto: '#chart_players',
      data: {
        x: 'x',
        xFormat: '%Y-%m-%d %H:%M:%S',
        columns: <%= raw Jason.encode!([["x" | @axis_key] | @columns_players]) %>
      },
      axis: {
        x: {
          type: 'timeseries',
          tick: {
            format: '%d %H:%M:%S'
          }
        },
        y: {
          min: 0,
          padding: {
            top: 15,
            bottom: 0
          }
        }
      }
    });

    c3.generate({
      bindto: '#chart_combined_connections',
      data: {
        x: 'x',
        xFormat: '%Y-%m-%d %H:%M:%S',
        columns: <%= raw Jason.encode!([["x" | @axis_key] | @columns_combined_connections]) %>
      },
      axis: {
        x: {
          type: 'timeseries',
          tick: {
            format: '%d %H:%M:%S'
          }
        },
        y: {
          min: 0,
          padding: {
            top: 15,
            bottom: 0
          }
        }
      }
    });

    c3.generate({
      bindto: '#chart_memory',
      data: {
        x: 'x',
        xFormat: '%Y-%m-%d %H:%M:%S',
        columns: <%= raw Jason.encode!([["x" | @axis_key] | @columns_memory]) %>
      },
      axis: {
        x: {
          type: 'timeseries',
          tick: {
            format: '%d %H:%M:%S'
          }
        },
        y: {
          min: 0,
          padding: {
            top: 15,
            bottom: 0
          }
        }
      }
    });

    c3.generate({
      bindto: '#chart_cpu_load',
      data: {
        x: 'x',
        xFormat: '%Y-%m-%d %H:%M:%S',
        columns: <%= raw Jason.encode!([["x" | @axis_key] | @columns_cpu_load]) %>
      },
      axis: {
        x: {
          type: 'timeseries',
          tick: {
            format: '%d %H:%M:%S'
          }
        },
        y: {
          min: 0,
          padding: {
            top: 15,
            bottom: 0
          }
        }
      }
    });

    c3.generate({
      bindto: '#chart_spring_server_messages',
      data: {
        x: 'x',
        xFormat: '%Y-%m-%d %H:%M:%S',
        columns: <%= raw Jason.encode!([["x" | @axis_key] | @server_messages]) %>
      },
      axis: {
        x: {
          type: 'timeseries',
          tick: {
            format: '%d %H:%M:%S'
          }
        },
        y: {
          min: 0,
          padding: {
            top: 15,
            bottom: 0
          }
        }
      }
    });

    c3.generate({
      bindto: '#chart_spring_client_messages',
      data: {
        x: 'x',
        xFormat: '%Y-%m-%d %H:%M:%S',
        columns: <%= raw Jason.encode!([["x" | @axis_key] | @client_messages]) %>
      },
      axis: {
        x: {
          type: 'timeseries',
          tick: {
            format: '%d %H:%M:%S'
          }
        },
        y: {
          min: 0,
          padding: {
            top: 15,
            bottom: 0
          }
        }
      }
    });
  });
</script>

