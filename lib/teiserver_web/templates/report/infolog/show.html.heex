<% {_fg, _bg, bsname} = colours() %>

<%= render TeiserverWeb.Report.GeneralView, "sub_menu.html", Map.merge(assigns, %{active: "infologs"}) %>

<div class="row section-menu">
  <div class="col-md-12">
    <div class={"card border-#{bsname}"}>
      <div class="card-body">
        <%= render TeiserverWeb.Report.InfologView, "section_menu.html", Map.merge(assigns, %{
            show_search: false,
            active: "show"
        }) %>
        <hr />

        <div class="float-right">

        </div>

      <h3>
        <%= @infolog.log_type %>
        &nbsp;&nbsp;&nbsp;
        Uploaded:
        <%= date_to_str(@infolog.timestamp, format: :ymd_hms) %>

        &nbsp;&nbsp;&nbsp;
        <%= time_until(@infolog.timestamp) %> ago
      </h3>

      <div class="row">
        <div class="col-md-12">
          <h5>Contents</h5>
          <textarea rows="6" class="form-control" style="font-family: monospace;"><%= @infolog.contents %></textarea>
        </div>
        <div class="col-md-12">
          <h5>Metadata</h5>
          <textarea rows="40" class="form-control" style="font-family: monospace;"><%= Jason.encode! @infolog.metadata, pretty: true %></textarea>
        </div>

      </div>



      </div>
    </div>
  </div>
</div>
